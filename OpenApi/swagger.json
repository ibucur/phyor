{
  "swagger": "2.0",
  "info": {
    "description": "Phyor Server",
    "version": "1.0.0",
    "title": "Phyor - Physical Object Recommender",
    "contact": {
      "email": "ibucur@ima-solutions.ro"
    }
  },
  "host": "localhost",
  "basePath": "/phyor",
  "tags": [
    {
      "name": "products",
      "description": "Access to products information"
    },
    {
      "name": "categories",
      "description": "Access the categories details"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/products/{productId}/{outputFormat}": {
      "get": {
        "tags": [
          "products"
        ],
        "summary": "Gets all possible details for a product, including the similarities in the specified format",
        "description": "",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "The unique id (identifier) of a product",
            "required": true,
            "type": "integer"
          },
          {
            "name": "outputFormat",
            "in": "path",
            "description": "The format of the output ('html','json','rdf')",
            "required": true,
            "type": "string"
          }
        ],
        "produces": [
          "application/json",
          "text/html",
          "application/rdf"
        ],
        "responses": {
          "200": {
            "description": "All OK",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Product"
            }
          }
        }
      }
    },
    "/products/{productId}/similar/{outputFormat}": {
      "get": {
        "tags": [
          "products"
        ],
        "summary": "Returns the similar products based on a specified product unique identification number in a specified format.",
        "description": "",
        "operationId": "getProductSimilarities",
        "produces": [
          "application/json",
          "text/html",
          "application/rdf"
        ],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "description": "The unique id (identifier) of a product",
            "required": true,
            "type": "integer"
          },
          {
            "name": "outputFormat",
            "in": "path",
            "description": "The format of the output ('html','json','rdf')",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "All OK",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/SimilarProduct"
            }
          },
          "404": {
            "description": "Product details not found"
          },
          "405": {
            "description": "Product ID is invalid"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/categories": {
      "get": {
        "tags": [
          "categories"
        ],
        "summary": "Returns all the categories in a JSON format",
        "description": "",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "All OK"
          }
        }
      },
      "post": {
        "tags": [
          "categories"
        ],
        "summary": "Adds a new category to the system",
        "description": "",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "All OK"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "category": {
          "type": "object",
          "$ref": "#/definitions/Category"
        },
        "similarProducts": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/SimilarProduct"
          }
        }
      }
    },
    "SimilarProduct": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "category": {
          "type": "object",
          "$ref": "#/definitions/Category"
        },
        "uri": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "language": {
          "type": "string"
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Phyor",
    "url": "https://github.com/ibucur/phyor"
  }
}